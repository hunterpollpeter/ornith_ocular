<div class="row">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<br>
				<h3>Create Siting</h3>
				<% if @siting.errors.any? %>
					<% @siting.errors.full_messages.each do |message| %>
						<p class="alert alert-danger"><%= message %></p>
					<% end %>
				<% end %>
				<%= form_for @siting, html: { multipart: true } do |f| %>
					<p>
						<%= f.label :bird %><br>
						<%= f.text_field :bird, {:class => 'form-control' } %>
					</p>
					<p>
						<%= f.label :location %><br>
						<%= f.text_field :location, {:class => 'form-control' } %>
					</p>
					<p>
						<%= f.label :image %><br>
						<%= f.file_field :image, {:class => 'form-control' } %>
					</p>
					<p>
						<%= f.submit({:class => 'btn btn-primary'}) %>
					</p>
				<% end %>
			</div>
		</div>
	</div>
</div>