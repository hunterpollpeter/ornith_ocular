<div id="content" class="row">
	<div class="col-12">
		<br>
		<%= image_tag @user.avatar.url(:small) %>
		<h3><%= @user.username %></h3>
		<p class="mb-0"><%= @user.name %></p>
		<% if @user == current_user %>
			<%= link_to 'Edit Account',  edit_user_registration_path, {:class => 'btn btn-secondary mt-2' } %>
			<br>
		<% end %>		
		<br>
		<div id="sightings" class="row px-1">
			<%= render @sitings %>
		</div>
		<%= will_paginate @sitings %>
	</div>
</div>

